<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff6f6f6"
    android:orientation="horizontal"
    android:id="@+id/myRideDetail">

    <!--<include-->
        <!--layout="@layout/tool_bar" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/user_details_card"
                android:layout_width="fill_parent"
                app:cardElevation="4dp"
                android:layout_height="175dp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/card_horizontal_margin"
                android:layout_marginRight="@dimen/card_horizontal_margin"
                android:layout_marginBottom="@dimen/card_horizontal_margin"
                android:layout_marginTop="@dimen/card_horizontal_margin">




            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_card_row_height"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageDriver"
                    android:src="@drawable/driver64"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name driver"
                    android:id="@+id/txtNameDriver"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_card_row_height"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/settings_card_row_height">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/carnumber"
                    android:layout_gravity="center_vertical" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="car number Text"
                    android:id="@+id/txtCarNumber"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/settings_card_row_height"
                android:orientation="horizontal"
                android:layout_marginTop="118dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/calendar"
                    android:layout_gravity="center_vertical" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date Text"
                android:id="@+id/txtCreated"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical" />


            </LinearLayout>


            </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


            <android.support.v7.widget.CardView
                android:id="@+id/passengers_or_Image_card"
                android:layout_width="fill_parent"
                app:cardElevation="4dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/card_horizontal_margin"
                android:layout_marginRight="@dimen/card_horizontal_margin"
                android:layout_marginBottom="@dimen/card_horizontal_margin"
                >



                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerPassengers"
                    android:layout_height="fill_parent"
                    android:layout_width="match_parent"/>


            </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/new_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_add"
                app:elevation="4dp"

                app:layout_anchor="@id/recyclerViewPeers"
                app:layout_anchorGravity="bottom|right|end"

                android:layout_gravity="end|bottom"
                app:fabSize="normal"

                app:backgroundTint="@color/ColorAccent"
                app:borderWidth="0dp"
                android:onClick="new_request"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

            </android.support.design.widget.FloatingActionButton>

    </LinearLayout>


</LinearLayout>
