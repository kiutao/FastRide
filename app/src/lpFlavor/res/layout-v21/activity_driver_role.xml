<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.maximum.fastride.DriverRoleActivity" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/tool_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_backpanel_height"
        android:background="?attr/colorPrimary" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/ColorBackground"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:elevation="8dp"
        android:layout_marginLeft="@dimen/card_horizontal_margin"
        android:layout_marginRight="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/negativeActionBarSize">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewPeers"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="vertical"/>

        <ImageButton
            android:id="@+id/add_button"
            android:layout_width="@dimen/diameter"
            android:layout_height="@dimen/diameter"
            android:background="@drawable/oval_ripple"
            android:tint="@android:color/white"
            android:stateListAnimator="@anim/button_elevation"
            android:elevation="@dimen/elevation_high"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="end|bottom"
            android:onClick="onButtonSubmitRide"
            android:layout_alignBottom="@+id/recyclerViewPeers"
            android:layout_alignEnd="@+id/recyclerViewPeers"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

    </RelativeLayout>

    <TextView android:text="Ride Code"
        android:id="@+id/txtRideCode"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/btnSubmitText"-->
        <!--android:onClick="onButtonSubmitRide"-->
        <!--android:id="@+id/btnSubmitRide"-->
        <!--android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:id="@+id/debugLayout"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtMe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:text="ME"/>

        <ScrollView
            android:id="@+id/SCROLLER_ID"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical"
            android:layout_weight="0.5"
            android:fillViewport="true">
            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start" />
        </ScrollView>

    </LinearLayout>

</LinearLayout>

    <!-- The navigation drawer -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/left_drawer"
        android:layout_width="@dimen/navdrawer_width"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_gravity="start"
        android:background="?attr/colorPrimaryDark"
        android:scrollbars="vertical" />


</android.support.v4.widget.DrawerLayout>
